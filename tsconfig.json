{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@controllers/*": ["src/controllers/*"],
            "@services/*": ["src/services/*"],
            "@configs/*": ["src/configs/*"],
            "@utils/*": ["src/utils/*"],
            "@routes/*": ["src/routes/*"],
            "@helpers/*": ["src/helpers/*"],
            "@custom-types/*": ["src/types/*"],
            "@middlewares/*": ["src/middlewares/*"],
        }
},
"lib": ["es2015"]
}
